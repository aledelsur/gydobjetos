        = will_paginate @paginations, :next_label=>"SIGUIENTE", :previous_label=>"", :page_links=>false
      - elsif params[:page] == @paginations.total_pages.to_s
        = will_paginate @paginations, :next_label=>"", :previous_label=>"ANTERIOR", :page_links=>false  
      - else
        = will_paginate @paginations, :next_label=>"SIGUIENTE", :previous_label=>"ANTERIOR", :page_links=>false  
        
      