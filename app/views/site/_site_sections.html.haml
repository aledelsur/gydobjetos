    .right
      .images
        - i=1
        - 12.times do
          - if (i == 3 || i == 6 || i == 9 || i == 12)
            .one-image.last
              = image_tag "home-module-1.png"
          - else
            .one-image
              = image_tag "home-module-1.png"
