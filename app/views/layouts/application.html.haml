!!!
%html
  %head
    %title G&D Objetos

    %meta{:"http-equiv" => "Content-Type", :content => "text/html;charset=utf-8" } 
    %meta{:name => "title", :content => "" }
    %meta{:name => "keywords", :content => "" }
    %meta{:name => "description", :content => "" }    
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag    "application", :media => "all"

    = javascript_include_tag "application"

    = csrf_meta_tags

    
  %body
    .wrapped
      .main-container
        .header
          .left-menu
            .line-left
            .buttons
              .first-button
                = link_to raw("<span>QUIENES SOMOS</span>"), index_path("quienes-somos"), :class => ("selected" if @event == "quienes-somos")
              .menu-star-separator
              .second-button
                = link_to raw("<span>CONTACTO</span>"), index_path("contacto"), :class => ("selected" if @event == "contacto")
              .clear
            .line-left
          .logo
            = link_to((image_tag "logo.png"), root_path)
          .right-menu
            .line-right
            .buttons
              .btn-group.menu-items.button
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  %span HOGAR
                %ul.dropdown-menu
                  %li 
                    = link_to "Todos", index_path("hogar")
                  %li.divider
                  - @hogar_categories.each do |category|
                    %li 
                      = link_to "Velez", "#"
              .menu-star-separator
              .btn-group.menu-items.button
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  %span BAZAR
                %ul.dropdown-menu
                  %li 
                    = link_to "Todos", index_path("bazar")
                  %li.divider
                  - @bazar_categories.each do |category|
                    %li 
                      = link_to "Bazar", "#"
              .menu-star-separator
              .btn-group.menu-items.button
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  %span PETIT
                %ul.dropdown-menu
                  %li 
                    = link_to "Todos", index_path("petit")
                  %li.divider
                  - @petit_categories.each do |category|
                    %li 
                      = link_to category.name, "#"
            .clear
            .line-right
      .middle
        = yield
      .footer
        .content
          .left
            Â© G&D by Roypa Estudio. All rights reserved.
          .right
            .follow-us
              Seguinos!
              %span
                =link_to image_tag("facebook-icon.png"), ""
              %span
                =link_to image_tag("twitter-icon.png"), ""
