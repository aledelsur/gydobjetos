= semantic_form_for @product, :url => admin_product_path(@product), :method => :put do |f|
  = f.inputs do
    = f.input :code
    = f.input :title
    = f.input :text
    = f.input :category_id, :as => :select, :input_html => {:disabled => true}, :collection => @categories, :selected => @product.category_id
    = hidden_field nil, nil, :name=>:category_id, :value=>@category_id
  = f.button "Aceptar"